@model Service

<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2"> @(Model.service_id != 0 ? "Обновление" : "Добавление") услуги</h3>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="service_id" hidden />
            <div class="border p-3">
                <div asp-validation-summary="All"></div>
                <div class="py-2 col-12">
                    <label asp-for="description" class="form-label ms-2">Название</label>
                    <input asp-for="description" autocomplete="off" class="form-control border-0 shadow" placeholder="Название" />
                    <span asp-validation-for="description" class="text-danger"></span>
                </div>
                <div class="py-2 col-12">
                    <label asp-for="price" class="form-label mt-4 ms-2">Цена</label>
                    <input asp-for="price" autocomplete="off" class="form-control border-0 shadow" placeholder="Цена" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>

                <div class="pt-4"></div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if (Model.service_id != 0)
                        {
                            <button type="submit" class="btn btn-outline-success border form-control"><i class="bi bi-pencil-fill"></i>&nbsp; Обновить</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-outline-success border form-control"><i class="bi bi-plus-square"></i> &nbsp; Добавить</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Service" asp-action="Index" class="btn btn-outline-danger border form-control">
                            <i class="bi bi-arrow-bar-left"></i> &nbsp;Назад к списку
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}









