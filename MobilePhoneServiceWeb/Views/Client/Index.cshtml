@model ClientSearch

<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Клиенты</h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="col-9">
                <form method="post">
                    <div class="container-fluid center-grid">

                        <div class="row mb-2">
                            <div class="col-4">
                                <label asp-for="objClientForSearch.client_id_EoS" class="form-label">Id:</label>
                                <input asp-for="objClientForSearch.client_id_EoS" autocomplete="off" class="form-control border-1 shadow" />
                            </div>
                            <div class="col-4">
                                <label asp-for="objClientForSearch.name_EoS" class="form-label">Имя:</label>
                                <input asp-for="objClientForSearch.name_EoS" autocomplete="off" class="form-control border-1 shadow" />
                            </div>
                            <div class="col-4">
                                <label asp-for="objClientForSearch.surname_EoS" class="form-label">Фамилия:</label>
                                <input asp-for="objClientForSearch.surname_EoS" autocomplete="off" class="form-control border-1 shadow" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <label asp-for="objClientForSearch.phone_number_EoS" class="form-label">Номер телефона:</label>
                                <input asp-for="objClientForSearch.phone_number_EoS" autocomplete="off" class="form-control border-1 shadow" />
                            </div>

                            <div class="col-6"></div>

                            <div class="col-2 pt-4 text-end">
                                <button type="submit" class="btn btn btn-outline-info border-1 form-control">
                                    <strong><i class="bi bi-search"></i>&nbsp; Поиск</strong>
                                </button>
                            </div>
                        </div>

                    </div>
                </form>
            </div>

            <div class="col-3 text-center mt-4">
                <a asp-controller="Client" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Добавить нового клиента
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width: 10%;">Id</th>
                    <th style="width: 20%;">Имя</th>
                    <th style="width: 20%;">Фамилия</th>
                    <th style="width: 20%;">Номер телефона</th>
                    <th style="width: 30%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listOfClient.OrderBy(u => u.client_id))
                {
                    <tr>
                        <td style="width: 10%;">@item.client_id</td>
                        <td style="width: 20%;">@item.name</td>
                        <td style="width: 20%;">@item.surname</td>
                        <td style="width: 20%;">@item.phone_number</td>
                        <td style="width: 30%;">
                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="Client" asp-action="Upsert" asp-route-id="@item.client_id"
                                   class="btn btn-primary form-control mx-2"><i class="bi bi-pencil-fill"></i> &nbsp; Обновить</a>

                                <button class="delete-button btn btn-danger form-control" data-id="@item.client_id">
                                    <i class="bi bi-trash3"></i> &nbsp;Удалить
                                </button>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Отключаем автозаполнение для всех полей ввода
        $('input').attr('autocomplete', 'off');
    });
</script>

@section Scripts{
    <script src="~/js/client.js"></script>

}




