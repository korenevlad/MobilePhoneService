@model List<Manufacturer>

<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Производители</h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="col-12">
            </div>
        </div>

        <table class="table table-bordered table-striped bg-dark">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Страна</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.manufacturer_id))
                {
                    <tr>
                        <td>@obj.manufacturer_name</td>
                        <td>@obj.country</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>