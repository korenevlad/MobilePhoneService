@model List<Manufacturer>

<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Производители</h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Manufacturer" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Добавить нового производителя
                </a>
            </div>
        </div>
        <table id="tblDataManufacturer" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Страна</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>


</div>


@section Scripts{
    <script src="~/js/manufacturer_list.js"></script>
}