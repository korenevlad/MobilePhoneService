@model List<Phone_specification>

<div class="card shadow border-0 mt-5">
    <div class="card-header bg-primary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white py-2">Спецификации</h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="PhoneSpecification" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Добавить новую спецификацию
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th style="width: 7%;">Id</th>
                    <th style="width: 8%;">RAM</th>
                    <th style="width: 8%;">Внутренняя память</th>
                    <th style="width: 8%;">Размер экрана</th>
                    <th style="width: 8%;">Название процессора</th>
                    <th style="width: 8%;">Количество ядер</th>
                    <th style="width: 8%;">Частота процессора</th>
                    <th style="width: 8%;">ОС</th>
                    <th style="width: 7%;">Версия ОС</th>
                    <th style="width: 30%;"></th>
                </tr>
            </thead>


            <tbody>
                @foreach (var item in Model.OrderBy(u => u.specification_id))
                {
                    <tr>
                        <td style="width: 7%;">@item.specification_id</td>
                        <td style="width: 8%;">@item.ram</td>
                        <td style="width: 8%;">@item.internal_memory</td>
                        <td style="width: 8%;">@item.screen_size</td>

                        <td style="width: 8%;">@item.Cpu_of_specification.model</td>
                        <td style="width: 8%;">@item.Cpu_of_specification.amount_cernels</td>
                        <td style="width: 8%;">@item.Cpu_of_specification.frequency</td>

                        <td style="width: 8%;">@item.Operating_system_of_specification.operating_system_name</td>
                        <td style="width: 7%;">@item.Operating_system_of_specification.operating_system_version</td>

                        <td style="width: 30%;">
                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="PhoneSpecification" asp-action="Upsert" asp-route-id="@item.specification_id"
                                   class="btn btn-primary form-control mx-2"><i class="bi bi-pencil-fill"></i> &nbsp; Обновить</a>

                                <button class="delete-button btn btn-danger form-control" data-id="@item.specification_id">
                                    <i class="bi bi-trash3"></i> &nbsp;Удалить
                                </button>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/phone_specification_list1.js"></script>
}